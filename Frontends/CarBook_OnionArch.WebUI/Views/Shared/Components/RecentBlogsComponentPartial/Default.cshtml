@using CarBook_OnionArch.Dto.BlogDtos
@model List<ResultBlogWithDetailsDto>

@*
    RecentBlogsComponentPartial
*@

<div class="sidebar-box ftco-animate">
    <h3>Son Bloglar</h3>
    @foreach (var item in Model)
    {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4" style="background-image: url(@item.coverImageUrl);"></a>
            <div class="text">
                <h3 class="heading"><a href="/Blog/BlogDetails/@item.id">@item.title</a></h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span> @item.createdDate.ToShortDateString()</a></div>
                    <div><a href="#"><span class="icon-person"></span>@item.author.fullName</a></div>
                    <div><a href="#"><span class="icon-chat"></span> @item.comments.Count()</a></div>
                </div>
            </div>
        </div>
    }
</div>
