@using CarBook_OnionArch.Dto.RentalDtos
@model ReservationDetailsDto

@{
    ViewData["Title"] = "Kiralama Özeti";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .reservation-summary-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 16px;
    }

    .reservation-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        padding: 32px 24px 24px 24px;
        margin-bottom: 24px;
    }

    .reservation-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 24px;
        text-align: center;
        color: #2d3a4b;
    }

    .reservation-details dt {
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 8px;
    }

    .reservation-details dd {
        margin-bottom: 16px;
        color: #212529;
        font-size: 1.05rem;
    }

    .reservation-btn {
        display: block;
        width: 100%;
        padding: 12px 0;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        background: #28a745;
        color: #fff;
        border: none;
        transition: background 0.2s;
        margin-top: 12px;
    }

        .reservation-btn:hover {
            background: #218838;
        }
</style>

<div class="reservation-summary-container">
    <div class="reservation-card">
        <div class="reservation-title">Kiralama Özeti</div>
        <dl class="row reservation-details">
            <dt class="col-sm-5">Araç</dt>
            <dd class="col-sm-7">@Model.CarName</dd>

            <dt class="col-sm-5">Teslim Alınacak Yer</dt>
            <dd class="col-sm-7">@Model.PickUpLocationName</dd>

            <dt class="col-sm-5">Bırakılacak Yer</dt>
            <dd class="col-sm-7">@Model.DropOffLocationName</dd>

            <dt class="col-sm-5">Teslim Alma Tarihi</dt>
            <dd class="col-sm-7">@Model.StartDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-5">Bırakılacak Tarih</dt>
            <dd class="col-sm-7">@Model.EndDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-5">Toplam Fiyat</dt>
            <dd class="col-sm-7">@String.Format("{0:0.00}", Model.TotalPrice)</dd>
        </dl>
        <form asp-action="CreateReservation" method="post">
            <input type="hidden" asp-for="CarId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="PickUpLocationId" />
            <input type="hidden" asp-for="DropOffLocationId" />
            <input type="hidden" asp-for="StartDate" />
            <input type="hidden" asp-for="EndDate" />
            <input type="hidden" asp-for="DailyPrice" />
            <input type="hidden" asp-for="TotalPrice" />
            <input type="hidden" asp-for="Status" />
            <button type="submit" class="reservation-btn">Kiralamayı Tamamla</button>
        </form>
    </div>
</div>