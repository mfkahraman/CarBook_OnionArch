@using CarBook_OnionArch.Dto.ServiceDtos

@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Hizmetlerimiz</span>
                <h2 class="mb-3">En Yeni Hizmetlerimiz</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="services services-2 w-100 text-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="@item.iconUrl"></span>
                        </div>
                        <div class="text w-100">
                            <h3 class="heading mb-2">@item.title</h3>
                            <p>@item.description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="ftco-section ftco-intro" style="background-image: url(/carbook-master/images/bg_3.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-6 heading-section heading-section-white ftco-animate">
                <h2 class="mb-3">Bizimle Kazanmak İster Misiniz? Öyleyse Geç Kalmayın.</h2>
                <a href="#" class="btn btn-primary btn-lg">Sürücü Ol</a>
            </div>
        </div>
    </div>
</section>

