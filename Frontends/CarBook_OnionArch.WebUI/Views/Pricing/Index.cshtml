@using CarBook_OnionArch.Dto.CarDtos
@model List<ResultCarWithRelationsDto>

@{
    ViewData["Title"] = "Araçlar";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="car-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th class="bg-primary heading">Günlük Ücret</th>
                                <th class="bg-dark heading">Aylık Ücret</th>
                                <th class="bg-black heading">Yıllık Kiralama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="">
                                    <td class="car-image"><div class="img" style="background-image:url(@item.coverImageUrl);"></div></td>
                                    <td class="product-name">
                                        <h3>@item.model</h3>
                                        <p class="mb-0 rated">
                                            <span>puan:</span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                            <span class="ion-ios-star"></span>
                                        </p>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Araç Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small>@item.carPricings?.Where(x => x.pricing?.name == "Günlük").FirstOrDefault()?.amount</span>
                                                <span class="per">/gün</span>
                                            </h3>
                                            <span class="subheading">+ ₺100/saat yakıt ücreti</span>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Araç Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small>@item.carPricings?.Where(x => x.pricing?.name == "Aylık").FirstOrDefault()?.amount</span>
                                                <span class="per">/ay</span>
                                            </h3>
                                            <span class="subheading">+ ₺100/saat yakıt ücreti</span>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Araç Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small>@item.carPricings?.Where(x => x.pricing?.name == "Yıllık").FirstOrDefault()?.amount</span>
                                                <span class="per">/yıl</span>
                                            </h3>
                                            <span class="subheading">+ ₺100/saat yakıt ücreti</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
