@using CarBook_OnionArch.Dto.BlogDtos
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ResultBlogWithDetailsDto>

@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .pagination {
        display: flex;
        justify-content: center;
    }
</style>

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-12 text-center d-flex ftco-animate">
                    <div class="blog-entry justify-content-end mb-md-5">
                        <a asp-page="/Blog/BlogDetails" asp-route-id="@item.id" class="block-20 img" style="background-image: url('@item.coverImageUrl');">
                        </a>
                        <div class="text px-md-5 pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.createdDate.ToShortDateString()</a></div>
                                <div><a href="#">@item.author?.fullName</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span> @item.comments?.Count()</a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@item.title</a></h3>
                            <p>@(item.content?.Length > 50 ? item.content.Substring(0, 150) + "..." : item.content)</p>
                            <p><a asp-page="/Blog/BlogDetails" asp-route-id="@item.id" class="btn btn-primary">Devam et <span class="icon-long-arrow-right"></span></a></p>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</section>
