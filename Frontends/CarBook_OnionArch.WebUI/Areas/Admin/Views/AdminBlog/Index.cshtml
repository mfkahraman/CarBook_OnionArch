@using CarBook_OnionArch.Dto.BlogDtos
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ResultBlogByIdWithDetailsDto>

@{
    ViewData["Title"] = "Blog Listesi";
    ViewData["SubTitle"] = "Blog Yönetimi Sayfası";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";

    int count = (Model.PageNumber - 1) * Model.PageSize;
}


<a class="btn btn-success mb-3" href="@Url.Action("Create", "AdminBlog", new { area = "Admin" })">Yeni Blog Oluştur</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Kategori</th>
            <th>İçerik</th>
            <th>Oluşturulma Tarihi</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Blog in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@Blog.title</td>
                <td>@Blog.author!.fullName</td>
                <td>@Blog.category!.name</td>
                <td>@(Blog.content != null && Blog.content.Length > 50 ? Blog.content.Substring(0, 50) + "..." : Blog.content)</td>
                <td>@Blog.createdDate.ToString("dd MMM yyyy")</td>
                <td>
                    <img src="@Blog?.coverImageUrl" alt="@Blog?.title" style="width: 100px; height: auto;" />
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Update", "AdminBlog", new { id = Blog?.id, area = "Admin" })">Update</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "AdminBlog", new { id = Blog?.id, area = "Admin" })"
                       onclick="return confirm('Bu veriyi silmek istediğinizden emin misiniz?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Paged List Pagination *@
<div class="d-flex justify-content-center">
    @Html.PagedListPager(
    Model,
    page => Url.Action("Index", new { page }),
        new X.PagedList.Mvc.Core.PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            UlElementClasses = new[] { "pagination" },
            DisplayLinkToFirstPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
            DisplayLinkToLastPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
            DisplayLinkToNextPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always
        }
        )
</div>

