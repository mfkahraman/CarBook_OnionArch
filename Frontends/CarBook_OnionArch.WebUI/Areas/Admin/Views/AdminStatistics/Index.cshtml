                    <div class="col-8">
                        <h2 class="d-flex align-items-center text-white mb-0">
                            @Model.AverageWeeklyRentPrice.ToString("0.00")₺
                        </h2>
                    </div>
                    <div class="col-4 text-right">
                        <span class="text-white-50">15% <i class="mdi mdi-arrow-down"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col-->
</div>
<!-- end row 1 -->

