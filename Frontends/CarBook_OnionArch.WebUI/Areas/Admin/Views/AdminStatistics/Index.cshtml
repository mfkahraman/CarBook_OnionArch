@using CarBook_OnionArch.Dto.StatisticsDtos
@model StatisticsDto

@{
    ViewData["Title"] = "İstatistikler";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";

    int automaticTransmissionCarRate = Model.CarCount == 0 ? 0 : (int)((Model.AutomaticTransmissionCarCount * 100) / Model.CarCount);
}

<!-- start row 1 -->
<div class="row">
    <div class="col-md-6 col-xl-3">
        <div class="card bg-primary border-primary">
            <div class="card-body">
                <div class="mb-4">
                    <span class="badge badge-soft-light float-right">Aktif Olanlar</span>
                    <h5 class="card-title mb-0 text-white">Yazar Sayısı</h5>
                </div>
                <div class="row d-flex align-items-center mb-4">
                    <div class="col-8">
                        <h2 class="d-flex align-items-center mb-0 text-white">
                           @Model.AuthorCount
                        </h2>
                    </div>
                    <div class="col-4 text-right">
                        <span class="text-white-50">17% <i class="mdi mdi-arrow-up"></i></span>
                    </div>
                </div>
            </div>

        </div>
    </div> <!-- end col-->

    <div class="col-md-6 col-xl-3">
        <div class="card bg-success border-success">
            <div class="card-body">
                <div class="mb-4">
                    <span class="badge badge-soft-light float-right">Aktif Araçlar</span>
                    <h5 class="card-title mb-0 text-white">Otomatik Vitesli Araç Sayısı</h5>
                </div>
                <div class="row d-flex align-items-center mb-4">
                    <div class="col-8">
                        <h2 class="d-flex align-items-center text-white mb-0">
                            @Model.AutomaticTransmissionCarCount
                        </h2>
                    </div>
                    <div class="col-4 text-right">
                        <span class="text-white-50">%5 <i class="mdi mdi-arrow-down"></i></span>
                    </div>
                </div>

                <div class="progress badge-soft-light shadow-sm" style="height: 7px;">
                    <div class="progress-bar bg-light" role="progressbar" style="width: @automaticTransmissionCarRate%;"></div>
                </div>
            </div>
        </div>
    </div> <!-- end col-->

    <div class="col-md-6 col-xl-3">
        <div class="card bg-warning border-warning">
            <div class="card-body">
                <div class="mb-4">
                    <span class="badge badge-soft-light float-right">Günlük</span>
                    <h5 class="card-title mb-0 text-white">Ortalama Kiralık Araç Fiyatı</h5>
                </div>
                <div class="row d-flex align-items-center mb-4">
                    <div class="col-8">
                        <h2 class="d-flex align-items-center text-white mb-0">
                            @Model.AverageDailyRentPrice.ToString("0.00")₺
                        </h2>
                    </div>
                    <div class="col-4 text-right">
                        <span class="text-white-50">8% <i class="mdi mdi-arrow-up"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col-->

    <div class="col-md-6 col-xl-3">
        <div class="card bg-info border-info">
            <div class="card-body">
                <div class="mb-4">
                    <span class="badge badge-soft-light float-right">Haftalık</span>
                    <h5 class="card-title mb-0 text-white">Ortalama Kiralık Araç Fiyatı</h5>
                </div>
