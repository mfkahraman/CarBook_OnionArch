                    <a asp-area="" asp-controller="Message" asp-action="Index" class="waves-effect @isActive("Message")" aria-label="Kullanıcı Mesajları">
                        <i class="feather-mail"></i><span>SignalR Chat</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminFooter" asp-action="Index" class="waves-effect @isActive("AdminFooter")" aria-label="Footer Bilgileri">
                        <i class="feather-layout"></i><span>Footer Bilgileri</span>
                    </a>
                </li>
            </ul>
