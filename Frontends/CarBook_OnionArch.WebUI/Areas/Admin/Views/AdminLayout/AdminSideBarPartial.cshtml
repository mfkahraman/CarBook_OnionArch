@*
    AdminSidebarPartial
*@

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    Func<string, string> isActive = c => string.Equals(currentController, c, StringComparison.OrdinalIgnoreCase) ? "active" : "";
}

<div class="vertical-menu">
    <div data-simplebar class="h-100">
        <div class="navbar-brand-box">
            <a asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index" class="logo d-flex align-items-center">
                <i class="mdi mdi-alpha-x-circle me-1"></i>
                <span>Admin Paneli</span>
            </a>
        </div>

        <div id="sidebar-menu">
            <ul class="metismenu list-unstyled" id="side-menu">
                <li class="menu-title">Menü</li>

                <li>
                    <a asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index" class="waves-effect @isActive("AdminDashboard")" aria-label="Dashboard">
                        <i class="feather-home"></i><span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminStatistics" asp-action="Index" class="waves-effect @isActive("AdminStatistics")" aria-label="İstatistikler">
                        <i class="feather-bar-chart-2"></i><span>İstatistikler</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminCar" asp-action="Index" class="waves-effect @isActive("AdminCar")" aria-label="Araç Yönetimi">
                        <i class="feather-truck"></i><span>Araç Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminFeature" asp-action="Index" class="waves-effect @isActive("AdminFeature")" aria-label="Araç Özellik Yönetimi">
                        <i class="feather-settings"></i><span>Araç Özellik Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminBrand" asp-action="Index" class="waves-effect @isActive("AdminBrand")" aria-label="Marka Yönetimi">
                        <i class="feather-tag"></i><span>Marka Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminBanner" asp-action="Index" class="waves-effect @isActive("AdminBanner")" aria-label="Banner Yönetimi">
                        <i class="feather-image"></i><span>Banner Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminAbout" asp-action="Index" class="waves-effect @isActive("AdminAbout")" aria-label="Hakkımızda Yönetimi">
                        <i class="feather-info"></i><span>Hakkımızda Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminAuthor" asp-action="Index" class="waves-effect @isActive("AdminAuthor")" aria-label="Yazar Yönetimi">
                        <i class="feather-user"></i><span>Yazar Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminCategory" asp-action="Index" class="waves-effect @isActive("AdminCategory")" aria-label="Blog Kategori Yönetimi">
                        <i class="feather-layers"></i><span>Blog Kategori Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminBlog" asp-action="Index" class="waves-effect @isActive("AdminBlog")" aria-label="Bloglar">
                        <i class="feather-file-text"></i><span>Bloglar</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminPricing" asp-action="Index" class="waves-effect @isActive("AdminPricing")" aria-label="Fiyatlandırmalar">
                        <i class="feather-dollar-sign"></i><span>Fiyatlandırmalar</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="AdminContact" asp-action="Index" class="waves-effect @isActive("AdminContact")" aria-label="Kullanıcı Mesajları">
