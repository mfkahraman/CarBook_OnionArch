@using CarBook_OnionArch.Dto.CarDtos
@model UpdateCarDto

@{
    ViewData["Title"] = "Araba Düzenle";
    ViewData["SubTitle"] = "Araba Düzenle";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CoverImageUrl" />
    <input type="hidden" asp-for="BigImageUrl" />

    <div class="row justify-content-center">
        <!-- Sol Sütun -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Araba Bilgileri</h5>
                    <div class="mb-3">
                        <label class="form-label">Marka</label>
                        <select asp-for="BrandId" asp-items="@ViewBag.Brands" class="form-select">
                            <option selected disabled>Marka Seçiniz</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Araba Modeli</label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vites Türü</label>
                        <select asp-for="Transmission" asp-items="@ViewBag.Transmissions" class="form-select">
                            <option selected disabled>Vites Türü Seçiniz</option>
                        </select>
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yakıt Türü</label>
                        <select asp-for="Fuel" asp-items="@ViewBag.Fuels" class="form-select">
                            <option selected disabled>Yakıt Türü Seçiniz</option>
                        </select>
                        <span asp-validation-for="Fuel" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Sütun -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Teknik Bilgiler</h5>
                    <div class="mb-3">
                        <label class="form-label">Kilometre</label>
                        <input asp-for="Mileage" type="number" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Koltuk Sayısı</label>
                        <input asp-for="Seat" type="number" class="form-control" />
                        <span asp-validation-for="Seat" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bagaj Kapasitesi</label>
                        <input asp-for="Luggage" type="number" class="form-control" />
                        <span asp-validation-for="Luggage" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Görsel</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Özellikler -->
        <div class="col-lg-10 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Özellikler</h5>
                    <div class="row">
                        @if (Model.CarFeatures != null)
                        {
                            foreach (var feature in Model.CarFeatures)
                            {
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox"
                                               name="CarFeatures[@Model.CarFeatures.IndexOf(feature)].IsAvailable"
                                               value="true"
                                               id="feature_@feature.FeatureId"
                                               @(feature.IsAvailable ? "checked" : "") />
                                        <input type="hidden" name="CarFeatures[@Model.CarFeatures.IndexOf(feature)].FeatureId" value="@feature.FeatureId" />
                                        <label class="form-check-label" for="feature_@feature.FeatureId">@feature.Feature!.name</label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Kaydet Butonu -->
        <div class="col-lg-10 text-center mb-4">
            <button type="submit" class="btn btn-dark btn-lg px-5">Kaydet</button>
        </div>
    </div>
</form>