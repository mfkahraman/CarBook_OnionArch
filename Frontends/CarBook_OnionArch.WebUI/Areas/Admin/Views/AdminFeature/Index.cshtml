@using CarBook_OnionArch.Dto.FeaturesDtos
@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Araç Özellikleri";
    ViewData["SubTitle"] = "Admin Araç Özellikleri Yönetimi Sayfası";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";

    int count = 0;
}


<a class="btn btn-success mb-3" href="@Url.Action("Create", "AdminFeature", new { area = "Admin" })">Yeni Özellik Oluştur</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Özellik Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feature in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@feature.name</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Update", "AdminFeature", new { id = feature.id, area = "Admin" })">Update</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "AdminFeature", new { id = feature.id, area = "Admin" })"
                       onclick="return confirm('Are you sure you want to delete this feature?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

