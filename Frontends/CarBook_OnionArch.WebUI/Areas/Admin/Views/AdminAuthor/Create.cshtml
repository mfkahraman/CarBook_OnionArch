@model CarBook_OnionArch.Dto.AuthorDtos.CreateAuthorDto

@{
    ViewData["Title"] = "Yeni Yazar Oluştur";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";
}

<h1>Yeni Yazar Oluştur</h1>

<form asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="fullName" class="control-label">Tam Adı</label>
        <input asp-for="fullName" class="form-control" />
        <span asp-validation-for="fullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label">Açıklama</label>
        <input asp-for="description" class="form-control" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Görsel</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Oluştur</button>
    <a asp-action="Index" asp-controller="AdminAbout" asp-area="Admin" class="btn btn-secondary">İptal</a>
</form>