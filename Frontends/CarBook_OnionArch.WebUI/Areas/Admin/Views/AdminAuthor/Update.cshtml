@using CarBook_OnionArch.Dto.AuthorDtos
@model UpdateAuthorDto

@{
    ViewData["Title"] = "Hakkımızda Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";
}

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="id" />
    <input type="hidden" asp-for="imageUrl" />

    <div class="form-group">
        <label asp-for="fullName" class="control-label">Tam Adı</label>
        <input asp-for="fullName" class="form-control" />
        <span asp-validation-for="fullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label">Açıklama</label>
        <input asp-for="description" class="form-control" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Görsel</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
