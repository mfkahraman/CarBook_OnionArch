@model CarBook_OnionArch.Dto.BannerDtos.CreateBannerDto

@{
    ViewData["Title"] = "Yeni Banner Oluştur";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";
}

<h1>Yeni Banner Oluştur</h1>

<form asp-action="Create" asp-controller="AdminBanner" asp-area="Admin" method="post">
    <div class="form-group">
        <label asp-for="title" class="control-label">Başlık</label>
        <input asp-for="title" class="form-control" />
        <span asp-validation-for="title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label">Açıklama</label>
        <input asp-for="description" class="form-control" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="videoDescription" class="control-label">Video Açıklaması</label>
        <input asp-for="videoDescription" class="form-control" />
        <span asp-validation-for="videoDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="videoUrl" class="control-label">Video URL</label>
        <input asp-for="videoUrl" class="form-control" />
        <span asp-validation-for="videoUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Oluştur</button>
    <a asp-action="Index" asp-controller="AdminBanner" asp-area="Admin" class="btn btn-secondary">İptal</a>
</form>