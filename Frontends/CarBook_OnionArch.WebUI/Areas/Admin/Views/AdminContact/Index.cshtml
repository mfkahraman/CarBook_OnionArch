@using CarBook_OnionArch.Dto.ContactDtos
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<ResultContactDto>

@{
    ViewData["Title"] = "Gelen Mesajlar";
    ViewData["SubTitle"] = "Gelen Mesajlar Sayfası";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdmLayout.cshtml";

    int count = (Model.PageNumber - 1) * Model.PageSize;
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Mesaj Gönderen</th>
            <th>Mail Adresi</th>
            <th>Konu</th>
            <th>Mesaj İçeriği</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@message.name</td>
                <td>@message.email</td>
                <td>@message.subject</td>
                <td>
                    <a href="javascript:void(0);" 
                       data-bs-toggle="modal" 
                       data-bs-target="#messageModal_@message.id">
                        @(message.message?.Length > 50 ? message.message.Substring(0, 50) + "..." : message.message)
                    </a>
                    <!-- Modal -->
                    <div class="modal fade" id="messageModal_@message.id" tabindex="-1" aria-labelledby="messageModalLabel_@message.id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="messageModalLabel_@message.id">Mesaj İçeriği</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                                </div>
                                <div class="modal-body">
                                    @message.message
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("MarkAsRead", "AdminContact", new { id = message.id, area = "Admin" })">Okundu Olarak İşaretle</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "AdminContact", new { id = message.id, area = "Admin" })"
                       onclick="return confirm('Bu veriyi silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    @Html.PagedListPager(
        Model,
        page => Url.Action("Index", new { page }),
        new X.PagedList.Mvc.Core.PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            UlElementClasses = new[] { "pagination" },
            DisplayLinkToFirstPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
            DisplayLinkToLastPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always,
            DisplayLinkToNextPage = X.PagedList.Mvc.Core.PagedListDisplayMode.Always
        }
    )
</div>

